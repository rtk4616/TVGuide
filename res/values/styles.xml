<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="NoDisplay" parent="@android:style/Theme.NoDisplay">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowShowWallpaper">false</item>
    </style>
    
    <style name="main_tab_bottom">
        <!-- <item name="android:textSize">@dimen/bottom_tab_font_size</item> -->
        <item name="android:textColor">@color/tab_text_selector</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/bottom_tab_selector</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/bottom_tab_height</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="more_menu_subfield">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:layout_marginTop">15.0dip</item>
        <item name="android:layout_marginRight">15.0dip</item>
    </style>
    <style name="list_item_common">
        <item name="android:gravity">left|center</item>
        <item name="android:background">@drawable/common_list_item_selector</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawableRight">@drawable/right_arrow</item>
    </style>
    <style name="menu_list_item" parent="@style/list_item_common">
        <item name="android:textSize">@dimen/sum_nav_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left|center</item>
        <item name="android:background">@drawable/nav_list_item_selector</item>
        <item name="android:layout_height">@dimen/sum_nav_row_height</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="style_tab_divider">
        <item name="android:background">@drawable/abs__list_divider_holo_light</item>
        <item name="android:layout_width">0.5sp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginTop">10.0sp</item>
        <item name="android:layout_marginBottom">10.0sp</item>
    </style>
    <style name="style_tab_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:button">@null</item>
    </style>
    <style name="style_preference_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">8.0sp</item>
        <item name="android:paddingBottom">8.0sp</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="style_layout_textview">
        <item name="android:textSize">@dimen/sum_nav_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="style_top_textview">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8.0sp</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>